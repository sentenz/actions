{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Default Renovate configuration for centralized actions",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":separateMajorReleases",
    ":separateMultipleMajorReleases",
    "group:allNonMajor",
    "schedule:weekly"
  ],
  "labels": ["dependencies", "renovate"],
  "prHourlyLimit": 5,
  "prConcurrentLimit": 10,
  "rebaseWhen": "behind-base-branch",
  "automerge": false,
  "platformAutomerge": false,
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 5am on monday"]
  },
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "enabled": true
  },
  "packageRules": [
    {
      "description": "Auto-merge patch updates for dev dependencies",
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["patch"],
      "automerge": true
    },
    {
      "description": "Group Docker image updates",
      "matchDatasources": ["docker"],
      "groupName": "docker images"
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "github actions"
    },
    {
      "description": "Pin Docker digests",
      "matchDatasources": ["docker"],
      "pinDigests": true
    },
    {
      "description": "Require semantic versioning for dependencies",
      "matchManagers": ["npm", "pip_requirements", "gomod"],
      "rangeStrategy": "pin"
    }
  ],
  "regexManagers": [
    {
      "description": "Update Docker images in shell scripts",
      "fileMatch": ["(^|/).*\\.sh$", "(^|/)Makefile$"],
      "matchStrings": [
        "(?<depName>[a-z0-9.-]+/[a-z0-9.-]+):(?<currentValue>[a-z0-9.-]+)@(?<currentDigest>sha256:[a-f0-9]+)"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
